<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_projeto"
            style="@style/bt_customizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="@string/botao1" />

        <Button
            android:id="@+id/button_feeds"
            style="@style/bt_customizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:text="@string/botao3" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_contexto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.73"
            android:background="#b5cdff"
            android:gravity="center"
            android:textSize="15dp"
            android:text="@string/contexto"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/add_atividade"
            android:layout_width="44dp"
            android:layout_height="34dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_plus" />

    </LinearLayout>
    	 <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    
	    <TextView 
	        android:id="@android:id/empty"
	        android:layout_gravity="center"
	        android:text="Nenhuma Atividade Encontrada"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textColor="@android:color/black"
	        android:textSize="22sp"
	         />

</LinearLayout>