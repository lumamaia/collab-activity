<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >


       			<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/button_projeto"
                        style="@style/bt_customizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:text="@string/botao1" />

                    <Button
                        android:id="@+id/button_feeds"
                        style="@style/bt_customizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.49"
                        android:text="@string/botao3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    
                    <TextView
			            android:id="@+id/tv_contexto"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_weight="0.73"
			            android:background="#b5cdff"
			            android:gravity="center"
			            android:textSize="15dp"
			            android:text="@string/contexto"
			            android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

             

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/bt_aceitar_convite"
                        style="@style/bt_customizado2"
                        android:background="#58f088"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.86"
                        android:text="Ser ResponsÃ¡vel"
                        android:visibility="gone"/>


                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ListView
                        android:id="@android:id/list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </ListView>
                </LinearLayout>
                
   
          </LinearLayout>
    </RelativeLayout>

</LinearLayout>