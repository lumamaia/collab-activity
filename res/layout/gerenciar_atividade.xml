<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ViewFlipper
            android:id="@+id/ViewFlipper01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

           <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/button_projeto"
                        style="@style/bt_customizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:text="@string/botao1" />

                    <Button
                        android:id="@+id/button_feeds"
                        style="@style/bt_customizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.49"
                        android:text="@string/botao3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
			            android:id="@+id/tv_contexto"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_weight="0.73"
			            android:background="#b5cdff"
			            android:gravity="center"
			            android:textSize="15dp"
			            android:text="@string/contexto"
			            android:textAppearance="?android:attr/textAppearanceLarge" />
                   </LinearLayout>
                       
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" >

                     <Button
                         android:id="@+id/bt_salvar"
                         style="@style/bt_customizado2"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_weight="0.93"
                         android:text="Salvar" />

                     <Button
                         android:id="@+id/bt_finalizar"
                         style="@style/bt_customizado2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Finalizar Atividade" />
                 </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nome:"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <EditText
                        android:id="@+id/atividade_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Prazo:"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <EditText
                        android:id="@+id/atividade_prazo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Descrição:"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <EditText
                        android:id="@+id/atividade_descricao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10" />
                </LinearLayout>


                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

<!--                     <Button
                        android:id="@+id/bt_ser_responsavel"
                        style="@style/bt_customizado"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ser Responsável" 
                        android:visibility="gone"/> -->

                    <Button
                        android:id="@+id/bt_responsavel"
                        style="@style/bt_customizado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gerenciar Responsável" />
                </LinearLayout>
					
					  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
					 
                    <Button
                        android:id="@+id/bt_add_comentario"
                        style="@style/bt_customizado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ Comentario" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ListView
                        android:id="@android:id/list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/bt_salvar_comentario"
                        style="@style/bt_customizado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salvar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comentario:" />

                    <EditText
                        android:id="@+id/atividade_comentario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10" />
                </LinearLayout>
            </LinearLayout>
        </ViewFlipper>
    </RelativeLayout>

</LinearLayout>