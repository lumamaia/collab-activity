<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/myWindowBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <!--
             <ViewFlipper
            android:id="@+id/ViewFlipper01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button_projeto"
                    style="@style/bt_customizado2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Projeto" />

                <Button
                    android:id="@+id/button_feeds"
                    style="@style/bt_customizado2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Feeds" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/bt_salvar"
                    style="@style/bt_customizado3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salvar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll04"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/myWindowBackground"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_contexto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/myGrayColor"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/contexto"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp" >


                        <ImageView
                            android:id="@+id/ic_add_comentario"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_add_comentario"
                            android:layout_weight="1" />


                        <ImageView
                            android:id="@+id/ic_add_responsavel"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_add_responsavel" 
                            android:layout_weight="1"/>
                 

                        <ImageView
                            android:id="@+id/ic_finalizar"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_ativ_finalizar" 
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/ic_finalizada"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_ativ_finalizada"
                            android:visibility="gone" 
                            android:layout_weight="1"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:text="Nome da Atividade:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/myGrayColor" />

                <EditText
                    android:id="@+id/atividade_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apptheme_textfield_default_holo_light"
                    android:hint="Nome"
                    android:inputType="textCapWords" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:text="Prazo da Atividade:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/myGrayColor" />

                <EditText
                    android:id="@+id/atividade_prazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apptheme_textfield_default_holo_light"
                    android:hint="Prazo"
                    android:inputType="date" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:text="Descrição da Atividade:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/myGrayColor" />

                <EditText
                    android:id="@+id/atividade_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apptheme_textfield_default_holo_light"
                    android:hint="Descrição"
                    android:inputType="textCapWords" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:text="Comentarios:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/myGrayColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ListView
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
