<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/myWindowBackground"
    android:orientation="horizontal">
      
     

      <ImageButton
          android:id="@+id/ic_anexo"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_anexo"
          android:background="@android:color/transparent"/>
      <ImageButton
          android:id="@+id/ic_remove_anexo"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_remove_anexo"
          android:background="@android:color/transparent"
          android:visibility="gone"/>
      <EditText
          android:id="@+id/input_comentario"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_toLeftOf="@+id/ic_anexo" />


 <ImageView
     android:id="@+id/imageview"
     android:layout_width="100dp"
     android:layout_height="100dp"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/input_comentario"
     android:visibility="gone" />



</RelativeLayout>